@{
    ViewBag.Title = "Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Categoria</h2>

<div class="row">
    <div class="col-md-12">
        <form id="frmCategoria" method="post">
            <input type="hidden" name="CategoriaId" id="CategoriaId" value="0" />
            <div class="form-group">
                <label>Nome</label>
                <input class="form-control" type="text" name="Nome" id="Nome" />
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-default" id="gravar">Gravar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/App/Requisicao.js"></script>
}

<script>
    $(document).ready(function () {
        console.log('enviar');
        $('#gravar').click(function () {
            requisicao('POST', '/api/Categoria/Gravar',
                $('#frmCategoria').serialize(), sessionStorage.getItem(nomeToken));
            });
    });
</script>
